<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="activities.DetailsActivity">

    <TextView
        android:id="@+id/transaction_type_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Transaction Type"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"/>

    <TextView
        android:id="@+id/transaction_type_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Deposit"
        android:textColor="@color/white"
        android:layout_below="@+id/transaction_type_hint"
        android:layout_marginTop="3dp"
        android:textSize="18sp"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"/>

    <TextView
        android:layout_below="@+id/transaction_type_tv"
        android:id="@+id/transaction_amount_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Transaction Amount"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"/>

    <TextView
        android:id="@+id/transaction_amount_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Amount"
        android:textColor="@color/white"
        android:layout_below="@+id/transaction_amount_hint"
        android:layout_marginTop="3dp"
        android:textSize="18sp"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"/>

    <TextView
        android:id="@+id/transaction_charge_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Transaction Charge"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/transaction_amount_tv"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"/>

    <TextView
        android:id="@+id/transaction_charge_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Charge"
        android:textColor="@color/white"
        android:layout_below="@+id/transaction_charge_hint"
        android:layout_marginTop="3dp"
        android:textSize="18sp"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/proceed_button"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="15dp"
        android:background="@drawable/input_design"
        android:padding="4dp"
        android:layout_marginTop="25dp"
        android:textColor="@color/white"
        android:text="Proceed"
        android:layout_marginBottom="10dp"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:layout_marginRight="15dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/cancel_button_details"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:background="@drawable/input_design"
        android:padding="4dp"
        android:layout_marginTop="25dp"
        android:textColor="@color/white"
        android:text="Cancel"
        android:layout_marginBottom="10dp"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:layout_marginRight="15dp"/>




</RelativeLayout>